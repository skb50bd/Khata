@model Khata.Services.PageFilterSort.PageFilter
<form asp-page="./Index" method="get">
    <div class="input-group">
        <input asp-for="@Model.Filter"
               name="SearchString"
               value="@Model.Filter"
               placeholder="Search..."
               class="form-control"
               aria-label="Search keyword" />
        <input asp-for="@Model.PageSize"
               name="PageSize"
               value="@int.MaxValue"
               class="form-control" hidden />
        <input asp-for="@Model.PageIndex"
               name="PageIndex"
               value="1"
               class="form-control" hidden />
        <div class="input-group-append">
            <button class="btn btn-outline-secondary"
                    type="submit"
                    id="searchButton">
                Go
            </button>
        </div>
    </div>
</form>