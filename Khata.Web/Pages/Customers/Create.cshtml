@page
@using WebUI.Pages.Shared.Components.CustomerForm
@model WebUI.Pages.Customers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Create a Customer</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @await Component.InvokeAsync(
                nameof(CustomerForm),
                new { product = Model.CustomerVm })

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


