@page
@using WebUI.Pages.Customers.Components.CustomerForm
@model WebUI.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4">Edit Customer</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @await Component.InvokeAsync(
                nameof(CustomerForm),
                new { customer = Model.CustomerVm })

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}