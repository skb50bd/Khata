@model Khata.Queries.IncomeReports

<ul class="nav nav-pills"
    id="income-tabs"
    role="tablist">

    <li class="nav-item">
        <a class="nav-link active"
           id="daily-income-tab"
           data-toggle="tab"
           href="#daily-income"
           role="tab"
           aria-controls="daily-income"
           aria-selected="true">Daily</a>
    </li>

    <li class="nav-item">
        <a class="nav-link"
           id="weekly-income-tab"
           data-toggle="tab" href="#weekly-income"
           role="tab"
           aria-controls="weekly-income"
           aria-selected="false">
            Weekly
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link"
           id="monthly-income-tab"
           data-toggle="tab"
           href="#monthly-income"
           role="tab"
           aria-controls="monthly-income"
           aria-selected="false">
            Monthly
        </a>
    </li>
</ul>

<div class="tab-content mt-3" id="income-tab-contents">
    <div class="tab-pane fade show active"
         id="daily-income"
         role="tabpanel"
         aria-labelledby="daily-income-tab">
        <partial name="_DailyIncome" for="Daily" />
    </div>

    <div class="tab-pane fade"
         id="weekly-income"
         role="tabpanel"
         aria-labelledby="weekly-income-tab">
        <partial name="_WeeklyIncome" for="Weekly" />
    </div>

    <div class="tab-pane fade"
         id="monthly-income"
         role="tabpanel"
         aria-labelledby="monthly-income-tab">
        <partial name="_MonthlyIncome" for="Monthly" />
    </div>
</div>


