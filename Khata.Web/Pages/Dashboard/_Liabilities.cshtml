@model Khata.Queries.LiabilityReport

<div class="card  mb-3"
     style="        max-width: 24rem;">
    <div class="card-header">Liabilities</div>
    <div class="card-body">
        <canvas id="liabilityChart" class="w-100" height="200"></canvas>
        <h5 class="card-title display-4 text-right">
            @((Model.UnpaidAmount + Model.TotalDue).ToString("C2"))
        </h5>
        <table class="table table-sm table-hover table-borderless table-striped">
            <tbody>
                <tr>
                    <th>Suppliers with Due</th>
                    <td class="text-right">@Html.DisplayFor(model => Model.DueCount)</td>
                </tr>
                <tr>
                    <th>Due Amount</th>
                    <td class="text-right">@Html.DisplayFor(model => Model.TotalDue)</td>
                </tr>
                <tr>
                    <th>Unpaid Employees</th>
                    <td class="text-right">@Html.DisplayFor(model => Model.UnpaidEmployees)</td>
                </tr>
                <tr>
                    <th>Unpaid Amount</th>
                    <td class="text-right">@Html.DisplayFor(model => Model.UnpaidAmount)</td>
                </tr>
                <tr><th>&nbsp;</th><td></td></tr>
            </tbody>
        </table>
    </div>
</div>
