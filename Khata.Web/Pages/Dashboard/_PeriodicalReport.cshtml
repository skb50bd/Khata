@model WebUI.Pages.Dashboard.IndexModel

<ul class="nav nav-pills mt-3"
    id="income-tabs"
    role="tablist">

    <li class="nav-item">
        <a class="nav-link active"
           id="daily-tab"
           data-toggle="tab"
           href="#daily"
           role="tab"
           aria-controls="daily"
           aria-selected="true">Daily</a>
    </li>

    <li class="nav-item">
        <a class="nav-link"
           id="weekly-tab"
           data-toggle="tab" href="#weekly"
           role="tab"
           aria-controls="weekly"
           aria-selected="false">
            Weekly
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link"
           id="monthly-tab"
           data-toggle="tab"
           href="#monthly"
           role="tab"
           aria-controls="monthly"
           aria-selected="false">
            Monthly
        </a>
    </li>

</ul>



<div class="tab-content" id="tab-contents">

    <div class="tab-pane fade show active"
         id="daily"
         role="tabpanel"
         aria-labelledby="daily-tab">
        <div class="row mt-4">
            <div class="col-lg-4 col-md-6">
                <partial name="_Income" for="IncomeReports.Daily" />
            </div>
            <div class="col-lg-4 col-md-6">
                <partial name="_Expense" for="ExpenseReports.Daily" />
            </div>
        </div>
    </div>

    <div class="tab-pane fade"
         id="weekly"
         role="tabpanel"
         aria-labelledby="weekly-tab">
        <div class="row mt-4">
            <div class="col-lg-4 col-md-6">
                <partial name="_Income" for="IncomeReports.Weekly" />
            </div>
            <div class="col-lg-4 col-md-6">
                <partial name="_Expense" for="ExpenseReports.Weekly" />
            </div>
        </div>

    </div>

    <div class="tab-pane fade"
         id="monthly"
         role="tabpanel"
         aria-labelledby="monthly-tab">
        <div class="row mt-4">
            <div class="col-lg-4 col-md-6">
                <partial name="_Income" for="IncomeReports.Monthly" />
            </div>
            <div class="col-lg-4 col-md-6">
                <partial name="_Expense" for="ExpenseReports.Monthly" />
            </div>
        </div>
    </div>

</div>
