@page
@using WebUI.Pages.DebtPayments.Components.DebtPaymentForm
@model WebUI.Pages.DebtPayments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Create a Debt Payment</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @await Component.InvokeAsync(
                nameof(DebtPaymentForm),
                new { debtPayment = Model.DebtPaymentVm })

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


