@page
@using WebUI.Pages.Employees.Components.EmployeeForm
@model WebUI.Pages.Employees.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4">Edit Employee</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @await Component.InvokeAsync(
                nameof(EmployeeForm),
                new { employee = Model.EmployeeVm })

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
