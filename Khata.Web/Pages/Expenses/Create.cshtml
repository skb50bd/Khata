@page
@using WebUI.Pages.Expenses.Components.ExpenseForm
@model WebUI.Pages.Expenses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Create an Expense</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" class="immutable-submit">
            @await Component.InvokeAsync(
                nameof(ExpenseForm),
                new { expense = Model.ExpenseVm })

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
