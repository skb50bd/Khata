@page
@model WebUI.Pages.Outlets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4">Edit Outlet</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            @await Component.InvokeAsync(
                nameof(Components.OutletForm.OutletForm),
                new { outlet = Model.OutletVm })

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
