@model IEnumerable<Khata.DTOs.ProductDto>

@using static Khata.Domain.StockStatus;
<table class="table table-borderless table-responsive-sm table-hover table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.TotalStock)</th>
            <th>@Html.DisplayNameFor(model => model.Unit)</th>
            <th>@Html.DisplayNameFor(model => model.PriceRetail)</th>
            <th>@Html.DisplayNameFor(model => model.PriceBulk)</th>
            <th>@Html.DisplayNameFor(model => model.PriceMargin)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string status;
            if (item.Status == LowStock) { status = "warning"; }
            else if (item.Status >= Empty) { status = "danger"; }
            else { status = ""; }

            <tr class="table-@status js-clickable-row" data-href="@Url.Page("./Details", new { id = item.Id })">
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalStock)</td>
                <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                <td>@Html.DisplayFor(modelItem => item.PriceRetail)</td>
                <td>@Html.DisplayFor(modelItem => item.PriceBulk)</td>
                <td>@Html.DisplayFor(modelItem => item.PriceMargin)</td>
            </tr>
        }
    </tbody>
</table>