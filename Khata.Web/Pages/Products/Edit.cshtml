@page
@model WebUI.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4">Edit Product</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            @await Component.InvokeAsync(
                nameof(WebUI.Pages.Components.ProductForm),
                new { product = Model.ProductVM })

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
