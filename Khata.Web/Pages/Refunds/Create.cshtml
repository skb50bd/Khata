@page
@model WebUI.Pages.Refunds.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Create a Refund</h1>
<hr />

@if (!(Model.Message is null))
{
    <div class="alert alert-@Model.MessageType" role="alert">
        @Model.Message
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            @await Component.InvokeAsync(
                nameof(Components.RefundForm.RefundForm),
                new { product = Model.RefundVm })

            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary"><strong>Create</strong></button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/refundForm.js"></script>
}
