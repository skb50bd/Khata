@model IEnumerable<Khata.DTOs.SalaryIssueDto>


<table class="table table-sm table-borderless table-responsive-sm table-hover table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.EmployeeFullName)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Amount)</th>
            <th class="text-right">Created at</th>
            <th class="text-right">Created by</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salaryIssue in Model)
        {
            <tr class="js-clickable-row"
                data-href="@Url.Page("./Details", new { id = salaryIssue.Id })">
                <td>@Html.DisplayFor(modelItem => salaryIssue.Id)</td>
                <td>@Html.DisplayFor(modelItem => salaryIssue.EmployeeFullName)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => salaryIssue.Amount)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => salaryIssue.Metadata.CreatedAt)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => salaryIssue.Metadata.Creator)</td>
            </tr>
        }
    </tbody>
</table>
