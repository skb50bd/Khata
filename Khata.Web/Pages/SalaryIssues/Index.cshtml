@page
@using WebUI.Pages.Components.Pagination
@using WebUI.Pages.Components.Search
@using WebUI.Pages.SalaryIssues.Components.SalaryIssuesList
@model WebUI.Pages.SalaryIssues.IndexModel

@{
    ViewData["Title"] = "Salary Issues";
}

<h1 class="display-4 text-dark">Salary Issues</h1>
<p></p>

<div class="row">
    <div class="col-md-6">
        @await Component.InvokeAsync(
            nameof(Search),
            new { model = Model.Pf }
            )
    </div>
    <div class="col-md-6 text-right">
        <p>
            <a asp-page="Create" class="btn btn-primary">Create new</a>
        </p>
    </div>
</div>
@if (!(Model.Message is null))
{
    <div class="alert alert-@Model.MessageType" role="alert">
        @Model.Message
    </div>
}

<div>
    @await Component.InvokeAsync(
        nameof(SalaryIssuesList),
        new { salaryIssues = Model.SalaryIssues })

    @await  Component.InvokeAsync(
        nameof(Pagination),
        new { model = Model.SalaryIssues.EmitPagination }
        )
</div>
