@model Khata.DTOs.SaleDto
@inject Microsoft.AspNetCore.Identity.UserManager<Khata.Domain.ApplicationUser> userManager

<div class="card" style="width:40rem">
    <div class="card-header">
        <div class="row">
            <div class="col-6">Sale# @Model.Id</div>
            <div class="col-6 text-right">
                @if (Model.IsRemoved)
                {
                    <span class="badge badge-danger">Removed</span>
                }
            </div>
        </div>

    </div>
    <div class="card-body">
        <a class="card-title h3" asp-page="/Customers/Details" asp-route-id="@Model.CustomerId">@Model.Customer.FullName</a>
        <table class="table table-sm table-hover mt-4">
            <tbody>
                <tr>
                    <th>Company</th>
                    <td>@Model.Customer.CompanyName</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>@Model.Customer.Address</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>@Model.Customer.Phone</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Customer.Email</td>
                </tr>
            </tbody>
        </table>

        <hr />
        <h4 class="card-title">Payment Information</h4>
        <table class="table table-sm table-borderless table-hover">
            <tbody>
                <tr>
                    <td>Cart Total</td>
                    <td class="text-right">@Model.PaymentSubTotal.ToString("c2")</td>
                </tr>
                <tr>
                    <td>Discount</td>
                    <td class="text-right">
                        (@Model.PaymentDiscountPercentage.ToString("0.##")%)
                        @Model.PaymentDiscountCash.ToString("c2")
                    </td>
                </tr>
                @{ var recordClass = ""; }
                @if (Model.Customer.Debt > 0)
                {
                    recordClass = "warning";
                }
                <tr class="table-@recordClass">

                    <td>Previous Due</td>
                    <td class="text-right">@Model.Customer.Debt.ToString("c2")</td>
                </tr>
                <tr class="table-info">
                    <th>Payable</th>
                    <td class="text-right">
                        @((Model.PaymentTotal + Model.Customer.Debt).ToString("c2"))
                    </td>
                </tr>

                <tr>
                    <th>Paid</th>
                    <td class="text-right">@(Model.PaymentPaid.ToString("c2"))</td>
                </tr>

                <tr class="table-@( Model.PaymentDue + Model.Customer.Debt> 0
                                        ? "danger"
                                        : "")
                    ">
                    <td>Due</td>
                    <td class="text-right">@((Model.PaymentDue + Model.Customer.Debt).ToString("c2"))</td>
                </tr>
                @if (Context.User.IsInRole("Admin"))
                {
                    <tr class="table-@( Model.Profit < 0
                                           ? "danger"
                                           : Model.Profit > Model.PaymentDue
                                               ? "success"
                                               : "primary")
                                                ">
                        <td>Profit</td>
                        <td class="text-right">@(Model.Profit.ToString("c2"))</td>
                    </tr>
                }
            </tbody>
        </table>

        <hr />
        <h4 class="card-title">Cart</h4>
        <table class="table table-sm table-borderless table-hover">
            <thead>
                <tr>
                    <th>Item</th>
                    <th class="text-right">Quantity</th>
                    <th class="text-right">Unit Price</th>
                    <th class="text-right">Net Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cart)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => item.Name)</td>
                        <td class="text-right">@Html.DisplayFor(model => item.Quantity)</td>
                        <td class="text-right">@Html.DisplayFor(model => item.UnitPrice)</td>
                        <td class="text-right">@Html.DisplayFor(model => item.NetPrice)</td>
                    </tr>
                }
            </tbody>
        </table>

        <hr />
        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <table class="table table-sm table-borderless table-hover">
                <tr>
                    <th>Description</th>
                    <td>@Model.Description</td>
                </tr>
            </table>
        }
        <div class="row">

            <div class="col-md-6">
                @if (!Model.IsRemoved)
                {
                    @*<a asp-page="./Edit"
                        asp-route-id="@Model.Id"
                        class="card-link btn btn-link btn-secondary text-white">Edit</a>*@

                    <a asp-page="../Invoices/Details"
                       asp-route-id="@Model.InvoiceId"
                       target="_blank"
                       class="card-link btn btn-outline-success">Invoice</a>

                    <a href="#"
                       class="card-link btn btn-link btn-danger text-white js-remove-item"
                       data-href="@Url.Action("Remove", "Sales", new {id = Model.Id})"
                       data-returnUrl="@Url.Page("./Index")">
                        Remove
                    </a>
                }
            </div>
            <div class="col-md-6 text-right">
                <a asp-page="./Index"
                   class="card-link btn btn-primary">
                    Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <partial name="_UpdateSummary" for="Metadata" />
    </div>
</div>