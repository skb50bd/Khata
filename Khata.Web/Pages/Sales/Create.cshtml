@page
@model WebUI.Pages.Sales.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Create a Sale</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            @await Component.InvokeAsync(
                nameof(Components.SaleForm.SaleForm),
                new { product = Model.SaleVm })

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


