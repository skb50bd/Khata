@model Khata.DTOs.ServiceDto

<div class="card" style="width:40rem">
    <div class="card-header">
        <div class="row">
            <div class="col-6">Product# @Model.Id</div>
            <div class="col-6 text-right">
                @if (Model.IsRemoved)
                {
                    <span class="badge badge-danger">Removed</span>
                }
            </div>
        </div>
    </div>
    <div class="card-body">
        <h3 class="card-title">@Model.Name</h3>
        <p class="card-subtitle"><u>Price</u>: <strong>@Model.Price</strong></p>
        <p class="card-text"><u>Description</u>: @Model.Description</p>
        <hr />
        <div class="row">
            <div class="col-md-6">
                @if (!Model.IsRemoved)
                {<a asp-page="./Edit"
                    asp-route-id="@Model.Id"
                    class="card-link btn btn-link btn-secondary">Edit</a>

                    <a href="#"
                       class="card-link text-danger btn btn-link btn-danger js-remove-item"
                       data-href="@Url.Action("Remove", "Services", new { id = Model.Id })"
                       data-returnUrl="@Url.Page("./Index")">
                        Remove
                    </a>
                }
            </div>
            <div class="col-md-6 text-right">
                <a asp-page="./Index"
                   class="card-link btn btn-primary">
                    Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <small class="text-muted">
            Last updated at @Model.ModificationTime.ToString("") by @Model.Modifier
        </small>
    </div>
</div>