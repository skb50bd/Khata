@model IEnumerable<Khata.DTOs.ServiceDto>
<table class="table table-sm table-borderless table-responsive-sm table-hover table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Price)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="js-clickable-row"
                data-href="@Url.Page("./Details", new { id = item.Id })">
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => item.Price)</td>
            </tr>
        }
    </tbody>
</table>