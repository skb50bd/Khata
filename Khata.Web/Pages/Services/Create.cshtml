@page
@model WebUI.Pages.Services.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Create a Service</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @await Component.InvokeAsync(
                nameof(Components.ServiceForm.ServiceForm),
                new { service = Model.ServiceVM })

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


