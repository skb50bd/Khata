@model IEnumerable<Khata.DTOs.SupplierDto>


<table class="table table-sm table-borderless table-responsive-sm table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Payable)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Phone)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Address)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            string status;
            if (supplier.Payable == 0M) { status = "success"; }
            else if (supplier.Payable > 0M) { status = "warning"; }
            else { status = ""; }

            <tr class="table-@status js-clickable-row"
                data-href="@Url.Page("./Details", new { id = supplier.Id })">
                <td>@Html.DisplayFor(modelItem => supplier.Id)</td>
                <td>@Html.DisplayFor(modelItem => supplier.FullName)</td>
                <td>@Html.DisplayFor(modelItem => supplier.CompanyName)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => supplier.Payable)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => supplier.Phone)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => supplier.Address)</td>
            </tr>
        }
    </tbody>
</table>