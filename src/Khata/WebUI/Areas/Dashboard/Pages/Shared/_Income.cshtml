@model IncomeReportWithSpan

<div class="card widget-tall">
    <div class="card-header">
        Income
    </div>
    <div class="card-body">
        <canvas id="@Model.Span-income-chart" class="pie-chart"></canvas>
        <p class="card-title lead text-right chart-info-big"
           id="@Model.Span-income-total">
            @((Model.Inflow.DebtReceived
                        + Model.Inflow.SaleReceived
                        + Model.Inflow.DepositAmount
                    ).ToCurrency())
        </p>
        <table class="table table-sm table-hover table-borderless table-striped mb-0">
            <tbody>
                <tr>
                    <th>Sales</th>
                    <td class="text-right">
                        <span class="badge badge-dark"
                              id="@Model.Span-sales">
                            @Html.DisplayFor(model => Model.Inflow.SaleCount)
                        </span>
                        <span id="@Model.Span-sale-receives">
                            @Html.DisplayFor(model => Model.Inflow.SaleReceived)
                        </span>
                    </td>
                </tr>
                <tr>
                    <th>Profit</th>
                    <td class="text-right">
                        <span id="@Model.Span-sale-profit">
                            @Html.DisplayFor(model => Model.Inflow.SaleProfit)
                        </span>
                    </td>
                </tr>
                <tr>
                    <th>Debt Payments</th>
                    <td class="text-right">
                        <span class="badge badge-dark"
                              id="@Model.Span-debt-receive-count">
                            @Html.DisplayFor(model => Model.Inflow.DebtPaymentCount)
                        </span>
                        <span id="@Model.Span-debt-receive-amount">
                            @Html.DisplayFor(model => Model.Inflow.DebtReceived)
                        </span>
                    </td>
                </tr>
                <tr>
                    <th>Purchase Retunrns</th>
                    <td class="text-right">
                        <span class="badge badge-dark"
                              id="@Model.Span-purchase-returns-count">
                            @Html.DisplayFor(model => Model.Inflow.PurchaseReturnsCount)
                        </span>
                        <span id="@Model.Span-purchase-returns-amount">
                            @Html.DisplayFor(model => Model.Inflow.PurchaseReturnsReceived)
                        </span>
                    </td>
                </tr>
                <tr>
                    <th>Deposits</th>
                    <td class="text-right">
                        <span class="badge badge-dark"
                              id="@Model.Span-deposits-count">
                            @Html.DisplayFor(model => Model.Inflow.DepositsCount)
                        </span>
                        <span id="@Model.Span-deposits-amount">
                            @Html.DisplayFor(model => Model.Inflow.DepositAmount)
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>