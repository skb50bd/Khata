@page
@model PurchaseReturns.CreateModel

@{
    ViewData["Title"] = "New Purchase Return";
}

<div class="row">
    <div class="col-md-8">
        <form method="post"
              class="immutable-submit">

            <div class="text-danger"
                 asp-validation-summary="ModelOnly">
            </div>

            <partial name="_PurchaseReturnForm" 
                     for="PurchaseReturnVm"/>

            <div class="form-group">
                <button type="submit"
                        class="btn btn-lg btn-primary">
                    <strong>
                        Create
                    </strong>
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">
        Back to List
    </a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/purchaseReturnForm.js" 
            asp-append-version="true">
    </script>
}
