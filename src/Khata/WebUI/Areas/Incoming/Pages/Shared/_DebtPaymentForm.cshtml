@using ViewModels
@using WebUI.Controllers
@model DebtPaymentViewModel

@{
    var sym = System.Globalization.CultureInfo.CurrentCulture.NumberFormat.CurrencySymbol;
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="Id" />

<div class="form-group" hidden>
    <label asp-for="CustomerId" class="col-form-label"></label>
    <input asp-for="CustomerId" 
           id="customer-id"
           class="form-control" />
    <span asp-validation-for="CustomerId" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label">Customer</label>
    <input id="CustomerSelector"
           name="CustomerSelector"
           class="form-control"
           type="text"
           data-path="@Url.Action("GetIds", "Customers")" />
</div>

<div class="form-group">
    <label class="col-form-label">Previous Debt</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">@sym</span>
        </div>
        <input id="DebtBefore" class="form-control" disabled />
    </div>
</div>

<div class="form-group">
    <label asp-for="Amount" class="col-form-label"></label>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">@sym</span>
        </div>
        <input asp-for="Amount" id="Amount" class="form-control" />
    </div>
    <span asp-validation-for="Amount" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label">Debt After</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">@sym</span>
        </div>
        <input id="DebtAfter" class="form-control" disabled />
    </div>
</div>

<div class="form-group">
    <label asp-for="Description" class="col-form-label"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
