@using ViewModels
@model PurchaseReturnViewModel

@{
    var purchaseSearchApi = Url.Action(
        "GetPurchases",
        "PurchaseReturns");
}

<div class="card mb-1">
    <div class="card-header">
        Purchase Info
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <input asp-for="PurchaseId"
                           id="purchase-id"
                           type="number"
                           value="0"
                           class="form-control"
                           hidden/>

                    <input id="purchase-selector"
                           class="form-control form-control-sm"
                           type="text"
                           data-path="@purchaseSearchApi"
                           placeholder="Purchase#, Vouchar#, Supplier Name/Id..."/>
                </div>
            </div>

            <div class="col-lg-12"
                 id="purchase-briefing">
            </div>
        </div>
    </div>
</div>