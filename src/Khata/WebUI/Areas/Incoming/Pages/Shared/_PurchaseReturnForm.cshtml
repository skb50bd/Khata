@using ViewModels
@model PurchaseReturnViewModel

<style>
    .card {
        width: 100%;
        margin-bottom: 2rem;
        margin-right: 2rem;
    }

    .cart {
        background-color: inherit;
    }

    .cart-item-name {
        min-width: 10rem;
    }

    .cart-item {
        font-weight: bold;
    }
</style>

<div asp-validation-summary="ModelOnly"
     class="text-danger">
</div>

<input type="hidden"
       asp-for="Id" />

<div class="row">
    <div class="col-lg-12">
        <partial name="_PurchaseReturnBasicInput"
                 model="Model" />
    </div>

    <!--LINE ITEM SELECT-->
    <div class="col-xl-6">
        <partial name="_PurchaseReturnsLineItemInput" 
                 model="Model"/>
    </div>


    <!--PAYMENT INFORMATION-->
    <div class="col-xl-6">
        <partial name="_PurchaseReturnsPaymentInput" 
                 model="Model"/>
    </div>
</div>
