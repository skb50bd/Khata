@using ViewModels
@model SaleViewModel

<form method="post" class="immutable-submit"
      id="sale-form">

    <div asp-validation-summary="ModelOnly"
         class="text-danger">
    </div>

    <input type="hidden"
           asp-for="Id" />

    <div class="row">
        <div class="col-lg-12">
            <partial name="_SaleBasicInfoInput"
                     model="Model" />
        </div>

        <div class="col-xl-6 pr-3 pr-xl-0">
            <partial name="_SaleLineItemInput"
                     model="Model" />
        </div>

        <div class="col-xl-6 pl-3 pl-xl-1">
            <partial name="_SalePaymentInfoInput"
                     model="Model" />
        </div>
    </div>

    <input type="submit"
           class="btn btn-primary"
           value="Create" />
    
    @*<input type="submit" 
           asp-page-handler="Save"
           class="btn btn-lg btn-outline-success"
           value="Save" />*@

    <input type="reset"
           class="btn btn-secondary"
           value="Reset" />
</form>