@using ViewModels
@model SaleViewModel

<style>
    .card {
        width: 100%;
        margin-bottom: 1rem;
        margin-right: 1rem;
    }

    .cart {
        background-color: inherit;
    }

    .cart-item-name {
        min-width: 10rem;
    }

    .cart-item {
        font-weight: bold;
    }
</style>

<div asp-validation-summary="ModelOnly"
     class="text-danger">
</div>

<input type="hidden" asp-for="Id" />



<div class="row">
    <div class="col-lg-12">
        <partial name="_SaleBasicInfoInput"
                 model="Model" />
    </div>

    <div class="col-xl-6">
        <partial name="_SaleLineItemInput"
                 model="Model" />
    </div>

    <div class="col-xl-6">
        <partial name="_SalePaymentInfoInput"
                 model="Model" />
    </div>
</div>