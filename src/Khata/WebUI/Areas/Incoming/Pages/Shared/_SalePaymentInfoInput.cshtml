@using ViewModels
@model SaleViewModel
@{
    var sym = System.Globalization.CultureInfo.CurrentCulture.NumberFormat.CurrencySymbol;
}

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="subtotal" class="col-form-label">Subtotal</label>
            <div class="input-group input-group-sm">
                <div class="input-group-prepend">
                    <span class="input-group-text">@sym</span>
                </div>
                <input id="subtotal"
                       type="number"
                       class="form-control" disabled />
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="debt-before"
                   class="col-form-label">
                Previous Due
            </label>
            <div class="input-group input-group-sm">
                <div class="input-group-prepend">
                    <span class="input-group-text">@sym</span>
                </div>
                <input id="debt-before"
                       type="number"
                       class="form-control" disabled />
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Payment.DiscountCash"
                   class="col-form-label">
            </label>

            <div class="input-group input-group-sm">
                <div class="input-group-prepend">
                    <span class="input-group-text">@sym</span>
                </div>

                <input asp-for="Payment.DiscountCash"
                       type="number"
                       id="discount-cash"
                       class="form-control" />
            </div>
            <span asp-validation-for="Payment.DiscountCash"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Payment.DiscountPercentage"
                   class="col-form-label"></label>
            <div class="input-group input-group-sm">
                <input asp-for="Payment.DiscountPercentage"
                       type="number"
                       id="discount-percentage"
                       class="form-control"
                       tabIndex="-1"
                       min="0"
                       max="80" />
                <div class="input-group-append">
                    <span class="input-group-text">%</span>
                </div>
            </div>
            <span asp-validation-for="Payment.DiscountPercentage"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="payable" class="col-form-label">
                Payable
            </label>
            <div class="input-group input-group-sm">
                <div class="input-group-prepend">
                    <span class="input-group-text">@sym</span>
                </div>
                <input id="payable"
                       type="number"
                       class="form-control" disabled />
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Payment.Paid"
                   class="col-form-label"></label>
            <div class="input-group input-group-sm">
                <div class="input-group-prepend">
                    <span class="input-group-text">@sym</span>
                </div>
                <input asp-for="Payment.Paid"
                       type="number"
                       id="paid"
                       class="form-control" />
            </div>
            <span asp-validation-for="Payment.Paid"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="debt-after"
                   class="col-form-label">
                New Due
            </label>
            <div class="input-group input-group-sm">
                <div class="input-group-prepend">
                    <span class="input-group-text">@sym</span>
                </div>
                <input id="debt-after"
                       type="number"
                       class="form-control" disabled />
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Description"
                   class="col-form-label"></label>
            <textarea asp-for="Description"
                      type="text"
                      class="form-control form-control-sm"></textarea>
            <span asp-validation-for="Description"
                  class="text-danger"></span>
        </div>
    </div>
</div>