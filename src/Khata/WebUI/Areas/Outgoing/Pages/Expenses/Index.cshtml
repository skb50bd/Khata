@page
@using WebUI.Areas.Outgoing.Pages.Expenses
@model IndexModel

@{
    ViewData["Title"] = "Expenses";
}

@if (Model.Expenses.Any())
{
    <div class="row">
        <div class="col-md-6">
            <partial name="_Search" 
                     for="Pf" />
        </div>

        <div class="col-md-6 text-right">
            <p>
                <a asp-page="Create"
                   class="btn btn-primary">
                    Create new
                </a>
            </p>
        </div>
    </div>

    <partial name="_ExpensesList"
             for="Expenses" />

    <partial name="_Pagination" 
             for="Expenses.EmitPagination" />
}
else
{
    <partial name="_LonelyHere" />
}
