@page
@model Refunds.CreateModel

@{
    ViewData["Title"] = "New Refund";
}

<div class="row">
    <div class="col-md-8">
        <form method="post" class="immutable-submit">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
