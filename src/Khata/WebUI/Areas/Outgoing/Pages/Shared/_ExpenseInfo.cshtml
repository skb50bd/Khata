@model DTOs.ExpenseDto

<div class="card info-card">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-8">Expense# @Model.Id</div>
            <div class="col-sm-4 text-sm-right">
                @if (Model.IsRemoved)
                {
                    <span class="badge badge-danger">Removed</span>
                }
            </div>
        </div>

    </div>
    <div class="card-body">
        <h3 class="card-title">@Model.Name</h3>
        <table class="table table-sm table-hover mt-4">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <td class="text-right">
                    @Html.DisplayFor(model => model.Amount)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <td class="text-right">
                    @Html.DisplayFor(model => model.Description)
                </td>
            </tr>
        </table>

        <hr />
        <div class="row">
            <div class="col-sm-6">
                @if (!Model.IsRemoved)
                {
                    <a href="#"
                       class="card-link text-white btn btn-link btn-danger js-remove-item"
                       data-href="@Url.Action("Remove", "Expenses", new {id = Model.Id})"
                       data-returnUrl="@Url.Page("./Index")">
                        Remove
                    </a>
                }
            </div>
            <div class="col-sm-6 text-sm-right mt-2 mt-sm-0">
                <a asp-page="./Index"
                   class="card-link btn btn-primary">
                    Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <partial name="_UpdateSummary" for="Metadata" />
    </div>
</div>
