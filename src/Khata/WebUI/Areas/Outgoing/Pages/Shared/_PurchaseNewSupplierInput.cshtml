@using ViewModels
@model SupplierViewModel

<div class="row">
    <div class="col-sm-6 col-lg-4">
        <div class="form-group">
            <label asp-for="FirstName"
                   class="col-form-label">
            </label>

            <input asp-for="FirstName" 
                   type="text" 
                   class="form-control form-control-sm supplier-input" 
                   id="first-name"/>

            <span asp-validation-for="FirstName"
                  class="text-danger">
            </span>
        </div>
    </div>

    <div class="col-sm-6 col-lg-4">
        <div class="form-group">
            <label asp-for="LastName"
                   class="col-form-label">
            </label>

            <input asp-for="LastName" 
                   type="text" 
                   class="form-control form-control-sm supplier-input" 
                   id="last-name"/>

            <span asp-validation-for="LastName"
                  class="text-danger">
            </span>
        </div>
    </div>

    <div class="col-sm-6 col-lg-4">
        <div class="form-group">
            <label asp-for="CompanyName"
                   class="col-form-label">
            </label>

            <input asp-for="CompanyName" 
                   type="text" 
                   class="form-control form-control-sm supplier-input" 
                   id="company-name"/>

            <span asp-validation-for="CompanyName"
                  class="text-danger">
            </span>
        </div>
    </div>

    <div class="col-sm-6 col-lg-4">
        <div class="form-group">
            <label asp-for="Phone"
                   class="col-form-label">
            </label>

            <input asp-for="Phone" 
                   type="text" 
                   class="form-control form-control-sm supplier-input" 
                   id="phone"/>

            <span asp-validation-for="Phone"
                  class="text-danger">
            </span>
        </div>
    </div>

    <div class="col-sm-6 col-lg-4">
        <div class="form-group">
            <label asp-for="Email"
                   class="col-form-label">
            </label>

            <input asp-for="Email" 
                   type="text" 
                   class="form-control form-control-sm supplier-input" 
                   id="email"/>

            <span asp-validation-for="Email"
                  class="text-danger">
            </span>
        </div>
    </div>

    <div class="col-sm-6 col-lg-4">
        <div class="form-group">
            <label asp-for="Address"
                   class="col-form-label">
            </label>

            <textarea asp-for="Address" 
                      class="form-control form-control-sm supplier-input"
                      id="address">
            </textarea>

            <span asp-validation-for="Address"
                  class="text-danger">
            </span>
        </div>
    </div>
</div>