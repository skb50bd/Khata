@using ViewModels
@model RefundViewModel

@{
    var saleSearchUrl = Url.Action(
        "GetSales",
        "Refunds");
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label
                        class="col-form-label h5 card-title">
                        Sale
                    </label>

                    <input asp-for="SaleId" 
                           type="number" 
                           value="0" 
                           class="form-control" 
                           hidden />

                    <input id="sale-selector"
                           class="form-control form-control-sm"
                           type="text"
                           data-path="@saleSearchUrl" />
                </div>
            </div>

            <div class="col-lg-12" 
                 id="sale-briefing">
            </div>
        </div>
    </div>
</div>