@using ViewModels
@model RefundViewModel

@{
    var saleSearchUrl = Url.Action(
        "GetSales",
        "Refunds");
}

<div class="card mb-1">
    <div class="card-header">
        Sale Info
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <input asp-for="SaleId"
                           type="number"
                           value="0"
                           class="form-control"
                           id="sale-id"
                           hidden/>

                    <input id="sale-selector"
                           class="form-control form-control-sm"
                           type="text"
                           data-path="@saleSearchUrl"
                           placeholder="Sale#, Invoice#, Customer Name/Id, ..."/>
                </div>
            </div>

            <div class="col-lg-12"
                 id="sale-briefing">
            </div>
        </div>
    </div>
</div>