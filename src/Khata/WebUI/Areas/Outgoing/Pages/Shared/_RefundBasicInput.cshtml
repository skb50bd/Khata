@using ViewModels
@model RefundViewModel

@{
    var saleSearchUrl = Url.Action(
        "GetSales",
        "Refunds");
}


<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <input asp-for="SaleId"
                   type="number"
                   value="0"
                   class="form-control"
                   id="sale-id"
                   hidden />

            <input id="sale-selector"
                   class="form-control form-control-sm"
                   type="text"
                   data-path="@saleSearchUrl"
                   placeholder="Sale#, Invoice#, Customer Name/Id, ..." />
        </div>
    </div>

    <div class="col-lg-12"
         id="sale-briefing">
    </div>
</div>