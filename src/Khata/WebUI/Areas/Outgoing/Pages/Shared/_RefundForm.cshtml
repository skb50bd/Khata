@using ViewModels
@model RefundViewModel

<div asp-validation-summary="ModelOnly"
     class="text-danger">
</div>

<input type="hidden" 
       asp-for="Id" />

<div class="row">
    <!--CUSTOMER-->
    <div class="col-lg-12">
        <partial name="_RefundBasicInput" 
                 model="Model"/>
    </div>

    <!--LINE ITEM SELECT-->
    <div class="col-xl-6 pr-3 pr-xl-0">
        <partial name="_RefundLineItemInput" 
                 model="Model"/>
    </div>


    <!--PAYMENT INFORMATION-->
    <div class="col-xl-6 pl-3 pl-xl-1">
        <partial name="_RefundPaymentInput"
                 model="Model"/>
    </div>
</div>
