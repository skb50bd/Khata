@using ViewModels
@model SalaryPaymentViewModel

@{
    var sym = System.Globalization.CultureInfo.CurrentCulture.NumberFormat.CurrencySymbol;
    var employeeSearchApi = Url.Action(
        "GetIds",
        "Employees");
}
<div class="card">
    <div class="card-body">
        <form method="post"
              class="immutable-submit">
            <div asp-validation-summary="ModelOnly"
                 class="text-danger">
            </div>

            <input type="hidden"
                   asp-for="Id" />

            <div class="form-group" hidden>

                <label asp-for="EmployeeId"
                       class="col-form-label">
                </label>

                <input asp-for="EmployeeId"
                       class="form-control"
                       id="employee-id" />

                <span asp-validation-for="EmployeeId"
                      class="text-danger">
                </span>

            </div>

            <div class="form-group">
                <label class="col-form-label">
                    Employee
                </label>

                <input id="employee-selector"
                       name="EmployeeSelector"
                       class="form-control"
                       type="text"
                       data-path="@employeeSearchApi"  
                       placeholder="Employee Name/ID"/>
            </div>

            <div class="form-group">
                <label class="col-form-label">
                    Previous Balance
                </label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            @sym
                        </span>
                    </div>

                    <input id="balance-before"
                           class="form-control"
                           disabled />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Amount"
                       class="col-form-label">
                </label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            @sym
                        </span>
                    </div>

                    <input asp-for="Amount"
                           id="paid-amount"
                           class="form-control" />

                    <span asp-validation-for="Amount"
                          class="text-danger">
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-form-label">
                    Balance After
                </label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            @sym
                        </span>
                    </div>

                    <input id="balance-after"
                           class="form-control"
                           disabled />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description"
                       class="col-form-label">
                </label>

                <textarea asp-for="Description"
                          class="form-control">
    </textarea>

                <span asp-validation-for="Description"
                      class="text-danger">
                </span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="reset" value="Reset" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>


