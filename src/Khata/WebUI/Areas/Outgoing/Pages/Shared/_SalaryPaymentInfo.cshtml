@model DTOs.SalaryPaymentDto

@{
    var removeApi = Url.Action(
        "Remove", 
        "SalaryPayments", 
        new
        {
            id = Model.Id
        });

    var removeReturnUrl = Url.Page("./Index");
}

<div class="card info-card">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-8">
                <span data-toggle="tooltip"
                      title="Salary-Payment ID">
                    Salary-Payment# @Model.Id
                </span>
            </div>

            <div class="col-sm-4 text-sm-right">
                <span class="text-muted"
                      data-toggle="tooltip"
                      title="Payment Date">
                    @Model.PaymentDate.LocalDate()
                </span>
                @if (Model.IsRemoved)
                {
                    <span class="badge badge-danger">
                        Removed
                    </span>
                }
            </div>
        </div>

    </div>
    <div class="card-body">
        <a class="h3 card-title"
           asp-area="People"
           asp-page="/Employees/Details"
           asp-route-id="@Model.EmployeeId">
            @Model.EmployeeFullName
        </a>
        <table class="table table-sm table-hover mt-4">
            <tr>
                <th>
                    Balance Before
                </th>
                <td class="text-right">
                    @Html.DisplayFor(model => model.BalanceBefore)
                </td>
            </tr>
            <tr>
                <th>
                    Amount
                </th>
                <td class="text-right">
                    @Html.DisplayFor(model => model.Amount)
                </td>
            </tr>
            <tr>
            <tr>
                <th>
                    Balance After
                </th>
                <td class="text-right">
                    @Html.DisplayFor(model => model.BalanceAfter)
                </td>
            </tr>

            <tr>
                <th>
                    Description
                </th>
                <td class="text-right">
                    @Html.DisplayFor(model => model.Description)
                </td>
            </tr>

        </table>

        <hr />
        <div class="row">

            <div class="col-sm-6">
                @if (!Model.IsRemoved)
                {
                    <a href="#"
                       class="card-link text-white btn btn-link btn-danger js-remove-item"
                       data-href="@removeApi"
                       data-returnUrl="@removeReturnUrl">
                        Remove
                    </a>
                }
            </div>
            <div class="col-sm-6 text-sm-right mt-2 mt-sm-0">
                <a asp-page="./Index"
                   class="card-link btn btn-primary">
                    Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <partial name="_UpdateSummary" for="Metadata" />
    </div>
</div>