@using ViewModels
@model SupplierPaymentViewModel

@{
    var sym = System.Globalization.CultureInfo.CurrentCulture.NumberFormat.CurrencySymbol;

    var supplierSearchApi = Url.Action(
        "GetIds",
        "Suppliers");
}

<div class="card">
    <div class="card-body">
        <form method="post"
              class="immutable-submit">
            <div asp-validation-summary="ModelOnly"
                 class="text-danger">
            </div>

            <input type="hidden"
                   asp-for="Id" />

            <div class="form-group"
                 hidden>

                <input asp-for="SupplierId"
                       class="form-control"
                       id="supplier-id" />
            </div>

            <div class="form-group">
                <label class="col-form-label">
                    Supplier
                </label>

                <input id="supplier-selector"
                       class="form-control"
                       type="text"
                       data-path="@supplierSearchApi"
                       placeholder="Supplier Name/ID"/>
            </div>
            
            <div id="supplier-brief-info">
            </div>

            <div class="form-group">
                <label class="col-form-label">
                    Previous Payable
                </label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            @sym
                        </span>
                    </div>

                    <input id="payable-before"
                           class="form-control"
                           disabled />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Amount"
                       class="col-form-label">
                </label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            @sym
                        </span>
                    </div>

                    <input asp-for="Amount"
                           id="paid-amount"
                           class="form-control" />

                    <span asp-validation-for="Amount"
                          class="text-danger">
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-form-label">
                    Payable After
                </label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            @sym
                        </span>
                    </div>
                    <input id="payable-after"
                           class="form-control"
                           disabled />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description"
                       class="col-form-label">
                </label>

                <textarea asp-for="Description"
                          class="form-control">
                </textarea>

                <span asp-validation-for="Description"
                      class="text-danger">
                </span>
            </div>

            <div class="form-group">
                <input type="submit"
                       value="Create"
                       class="btn btn-primary" />
                <input type="reset"
                       value="Reset"
                       class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

