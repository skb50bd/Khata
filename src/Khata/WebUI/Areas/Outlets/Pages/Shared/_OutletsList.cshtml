@model IEnumerable<DTOs.OutletDto>
<table class="table table-sm table-borderless table-responsive-sm table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Address)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Phone)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Email)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
        <tr class="js-clickable-row" data-href="@Url.Page("./Details", new { id = item.Id })">
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td class="text-right">@Html.DisplayFor(modelItem => item.Address)</td>
            <td class="text-right">@Html.DisplayFor(modelItem => item.Phone)</td>
            <td class="text-right">@Html.DisplayFor(modelItem => item.Email)</td>
        </tr>
        }
    </tbody>
</table>
