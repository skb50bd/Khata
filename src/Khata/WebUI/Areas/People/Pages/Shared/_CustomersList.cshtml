@model IEnumerable<DTOs.CustomerDto>


<table class="table table-sm table-borderless table-responsive-sm table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Debt)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Phone)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Address)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            string status;
            if (customer.Debt == 0M) { status = "success"; }
            else if (customer.Debt > 0M) { status = "warning"; }
            else { status = string.Empty; }
            var url = Url.Page(
                "/Customers/Details", 
                new { area = "People", id = customer.Id });

            <tr class="table-@status js-clickable-row"
                data-href="@url">
                <td>@Html.DisplayFor(modelItem => customer.Id)</td>
                <td>@Html.DisplayFor(modelItem => customer.FullName)</td>
                <td>@Html.DisplayFor(modelItem => customer.CompanyName)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => customer.Debt)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => customer.Phone)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => customer.Address)</td>
            </tr>
        }
    </tbody>
</table>