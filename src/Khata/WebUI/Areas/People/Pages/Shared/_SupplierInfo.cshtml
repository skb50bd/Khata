@model DTOs.SupplierDto

<div class="card info-card">
    <div class="card-header">
        <div class="row">
            <div class="col-6">Supplier# @Model.Id</div>
            <div class="col-6 text-right">
                @if (Model.IsRemoved)
                {
                    <span class="badge badge-danger">Removed</span>
                }
            </div>
        </div>

    </div>
    <div class="card-body">
        <h3 class="card-title">
            @Html.DisplayFor(model => model.FullName)
        </h3>

        <table class="table table-sm table-hover mt-4">
            <tr>
                <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
                <td class="text-right">@Html.DisplayFor(model => model.CompanyName)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <td class="text-right">@Html.DisplayFor(model => model.Address)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                <td class="text-right">@Html.DisplayFor(model => model.Phone)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <td class="text-right">@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Payable)</th>
                <td class="text-right">@Html.DisplayFor(model => model.Payable)</td>
            </tr>

            <tr>
                <th>@Html.DisplayNameFor(model => model.Note)</th>
                <td class="text-right">@Html.DisplayFor(model => model.Note)</td>
            </tr>
        </table>

        <hr />
        <div class="row">

            <div class="col-sm-8">
                @if (!Model.IsRemoved)
                {
                    <a asp-page="./Edit"
                       asp-route-id="@Model.Id"
                       class="card-link text-white btn btn-link btn-secondary">Edit</a>

                    <a href="#"
                       class="card-link text-white btn btn-link btn-danger js-remove-item"
                       data-href="@Url.Action("Remove", "Suppliers", new {id = Model.Id})"
                       data-returnUrl="@Url.Page("./Index")">
                        Remove
                    </a>
                }
            </div>
            <div class="col-sm-4 text-sm-right mt-2 mt-sm-0">
                <a asp-page="./Index"
                   class="card-link btn btn-primary">
                    Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <partial name="_UpdateSummary" for="Metadata" />
    </div>
</div>