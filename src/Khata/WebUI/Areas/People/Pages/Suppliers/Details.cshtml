@page "{handler?}"
@model Suppliers.DetailsModel

@{
    ViewData["Title"] = "Supplier Details";

    var purchasesSrc = Url.Page(
        "/Suppliers/Details",
        "Purchases",
        new { area = "People", Model.Supplier.Id });

    var purchaseReturnsSrc = Url.Page(
        "/Suppliers/Details", "PurchaseReturns",
        new { area = "People", Model.Supplier.Id });

    var supplierPaymentsSrc = Url.Page(
        "/Suppliers/Details",
        "SupplierPayments",
        new { area = "People", Model.Supplier.Id });
}

<ul class="nav nav-pills mb-3"
    id="pills-tab"
    role="tablist">
    <li class="nav-item">
        <a class="nav-link active"
           id="pills-overview-tab"
           data-toggle="pill"
           href="#pills-overview"
           role="tab"
           aria-controls="pills-overview"
           aria-selected="true">
            Overview
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link"
           id="pills-profile-tab"
           data-toggle="pill"
           href="#pills-profile"
           role="tab"
           aria-controls="pills-profile"
           aria-selected="false">
            Profile
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link ajax-tab"
           id="pills-purchases-tab"
           data-toggle="pill"
           href="#pills-purchases"
           role="tab"
           aria-controls="pills-purchases"
           aria-selected="false"
           data-partial-source="@purchasesSrc">
            Purchases
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link ajax-tab"
           id="pills-supplier-payments-tab"
           data-toggle="pill"
           href="#pills-supplier-payments"
           role="tab"
           aria-controls="pills-supplier-payments"
           aria-selected="false"
           data-partial-source="@supplierPaymentsSrc">
            Supplier Payments
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link ajax-tab"
           id="pills-purchase-returns-tab"
           data-toggle="pill"
           href="#pills-purchase-returns"
           role="tab"
           aria-controls="pills-purchase-returns"
           aria-selected="false"
           data-partial-source="@purchaseReturnsSrc">
            Purchase-Returns
        </a>
    </li>
</ul>

<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active"
         id="pills-overview"
         role="tabpanel"
         aria-labelledby="pills-overview-tab">
        <partial name="_SupplierOverview" for="Report" />
    </div>
    <div class="tab-pane fade"
         id="pills-profile"
         role="tabpanel"
         aria-labelledby="pills-profile-tab">

        <partial name="_SupplierInfo" for="Supplier" />
    </div>
    <div class="tab-pane fade"
         id="pills-purchases"
         role="tabpanel"
         aria-labelledby="pills-purchases-tab">

    </div>
    <div class="tab-pane fade"
         id="pills-supplier-payments"
         role="tabpanel"
         aria-labelledby="pills-supplier-payments-tab">

    </div>
    <div class="tab-pane fade"
         id="pills-purchase-returns"
         role="tabpanel"
         aria-labelledby="pills-purchase-returns-tab">

    </div>
</div>
