@model IEnumerable<DTOs.ExpenseDto>


<table class="table table-sm table-borderless table-responsive-sm table-hover table-striped">
    <thead>
        <tr class="thead-dark">
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Amount)</th>
            <th class="text-right">Created at</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expense in Model)
        {
            var href = Url.Page(
                "/Expenses/Details",
                new
                {
                    area = "Outgoing",
                    id = expense.Id
                });

            <tr class="js-clickable-row"
                data-href="@href">
                <td>@Html.DisplayFor(modelItem => expense.Id)</td>
                <td>@Html.DisplayFor(modelItem => expense.Name)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => expense.Amount)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => expense.Metadata.CreatedAt)</td>
            </tr>
        }
    </tbody>
</table>
