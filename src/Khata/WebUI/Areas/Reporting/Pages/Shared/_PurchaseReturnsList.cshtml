@model IEnumerable<DTOs.PurchaseReturnDto>

<table class="table table-sm table-borderless table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.CashBack)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.DebtRollback)</th>
            <th class="text-right"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var href = Url.Page(
                "/PurchaseReturns/Details", 
                new
                {
                    area = "Incoming", id = item.Id
                });

            <tr class="js-clickable-row" 
                data-href="@href">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.CashBack)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.DebtRollback)
                </td>
                <td class="text-right">
                    <a asp-area="Outgoing"
                       asp-page="/Purchases/Details"
                       asp-route-id="@Html.ValueFor(modelItem => item.PurchaseId)"
                       class="card-link btn btn-sm btn-success blank-link-button"
                       target="_blank">
                        Purchase
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>