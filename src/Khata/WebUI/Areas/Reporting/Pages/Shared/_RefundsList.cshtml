@model IEnumerable<DTOs.RefundDto>

<table class="table table-sm table-borderless table-responsive-sm table-hover table-striped">
    <thead>
        <tr class="thead-dark">
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.CashBack)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.DebtRollback)</th>
            <th class="text-right">Created At</th>
            <th class="text-right"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var href = Url.Page(
                "/Refunds/Details",
                new
                {
                    area = "Outgoing",
                    id = item.Id
                });

            <tr class="js-clickable-row" data-href="@href">
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => item.CashBack)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => item.DebtRollback)</td>
                <td class="text-right">@Html.ValueFor(modelItem => item.Metadata.CreatedAt)</td>
                <td class="text-right">
                    <a asp-area="Incoming" 
                       asp-page="/Sales/Details"
                       asp-route-id="@Html.ValueFor(modelItem => item.SaleId)"
                       class="card-link btn btn-sm btn-success">
                        Sale
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>