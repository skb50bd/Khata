@model IEnumerable<DTOs.SalaryPaymentDto>


<table class="table table-sm table-borderless table-responsive-sm table-hover table-striped">
    <thead class="thead-dark">
        <tr class="thead-dark">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th class="text-right">
                @Html.DisplayNameFor(model => model.Amount)
            </th>

            <th class="text-right">
                Created at
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salaryPayment in Model)
        {
            var href = Url.Page(
                "/SalaryPayments/Details",
                new
                {
                    area = "Outgoing",
                    id = salaryPayment.Id
                });

            <tr class="js-clickable-row"
                data-href="@href">
                <td>
                    @Html.DisplayFor(modelItem => salaryPayment.Id)
                </td>

                <td class="text-right">
                    @Html.DisplayFor(modelItem => salaryPayment.Amount)
                </td>

                <td class="text-right">
                    @Html.DisplayFor(modelItem => salaryPayment.Metadata.CreatedAt)
                </td>
            </tr>
        }
    </tbody>
</table>
