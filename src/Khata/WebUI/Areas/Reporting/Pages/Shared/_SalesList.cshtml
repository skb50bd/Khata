@using DTOs
@model IEnumerable<SaleDto>

<table class="table table-sm table-borderless table-responsive-sm table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Customer.FullName)
            </th>

            <th class="text-right">
                @Html.DisplayNameFor(model => model.PaymentTotal)
            </th>

            <th class="text-right">
                @Html.DisplayNameFor(model => model.PaymentDue)
            </th>

            <th class="text-right">
                @Html.DisplayNameFor(model => model.Profit)
            </th>

            <th class="text-right"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var href = Url.Page(
                "/Sales/Details",
                new
                {
                    area = "Incoming",
                    id = item.Id
                });

            <tr class="js-clickable-row" 
                data-href="@href">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Customer.FullName)
                </td>

                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.PaymentTotal)
                </td>

                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.PaymentDue)
                </td>

                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Profit)
                </td>

                <td class="text-right">
                    <a asp-area="Incoming" 
                       asp-page="/Invoices/Details"
                       target="_blank"
                       asp-route-id="@item.InvoiceId"
                       class="card-link btn btn-sm btn-success blank-link-button">
                        Invoice
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>