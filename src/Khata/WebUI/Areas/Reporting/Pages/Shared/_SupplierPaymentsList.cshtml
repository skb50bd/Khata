@model IEnumerable<DTOs.SupplierPaymentDto>

<table class="table table-sm table-borderless table-responsive-sm table-hover table-striped">
    <thead>
        <tr class="thead-dark">
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Amount)</th>
            <th class="text-right">Created at</th>
            <th class="text-right"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplierPayment in Model)
        {
            var href = Url.Page(
                "/SupplierPayments/Details",
                new
                {
                    area = "Outgoing",
                    id = supplierPayment.Id
                });

            <tr class="js-clickable-row"
                data-href="@href">
                <td>
                    @Html.DisplayFor(modelItem => supplierPayment.Id)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => supplierPayment.Amount)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => supplierPayment.Metadata.CreatedAt)
                </td>
                <td class="text-right">
                    <a class="btn btn-success btn-sm blank-link-button"
                       target="_blank"
                       asp-area="Outgoing"
                       asp-page="/Vouchars/Details"
                       asp-route-id="@Html.ValueFor(modelItem => supplierPayment.VoucharId)">
                        Vouchar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
