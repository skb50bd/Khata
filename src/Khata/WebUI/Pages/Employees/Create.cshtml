@page
@using WebUI.Pages.Employees.Components.EmployeeForm
@model WebUI.Pages.Employees.CreateModel

@{
    ViewData["Title"] = "New Employee";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            @await Component.InvokeAsync(
                nameof(EmployeeForm),
                new { employee = Model.EmployeeVm })

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

