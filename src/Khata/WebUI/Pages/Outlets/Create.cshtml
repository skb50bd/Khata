@page
@model WebUI.Pages.Outlets.CreateModel

@{
    ViewData["Title"] = "New Outlet";
}

<div class="row">
    <div class="col-md-8">
        <form method="post">
            @await Component.InvokeAsync(
                nameof(Components.OutletForm.OutletForm),
                new { outlet = Model.OutletVm })

            <div class="form-group">
                <input type="submit" 
                       value="Create" 
                       class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
