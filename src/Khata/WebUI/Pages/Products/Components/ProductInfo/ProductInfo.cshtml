@model DTOs.ProductDto

<div class="card" style="width:40rem">
    <div class="card-header">
        <div class="row">
            <div class="col-6">Product# @Model.Id</div>
            <div class="col-6 text-right">
                @if (Model.IsRemoved)
                {
                    <span class="badge badge-danger">Removed</span>
                }
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <h3 class="card-title col-md-6">@Model.Name</h3>
            <h5 class="card-subtitle text-right text-muted col-md-6">
                @Model.Outlet.Title
            </h5>
        </div>
        
        <table class="table table-sm table-hover mt-5">
            <tbody>
                <tr>
                    <th>Unit</th>
                    <td>@Model.Unit</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>@Model.Description</td>
                </tr>
            </tbody>
        </table>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <h5 class="card-subtitle">
                    Inventory
                </h5>
                <table class="table table-sm table-hover mt-2">
                    <tr>
                        <th>Stock</th>
                        <td class="text-right">@Html.DisplayFor(model => model.InventoryStock)</td>
                    </tr>
                    <tr>
                        <th>Warehouse</th>
                        <td class="text-right">@Html.DisplayFor(model => model.InventoryWarehouse)</td>
                    </tr>
                    <tr>
                        <th>Low Stock At</th>
                        <td class="text-right">@Html.DisplayFor(model => model.InventoryAlertAt)</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <h5 class="card-subtitle">
                    Pricing
                </h5>

                <table class="table table-sm table-hover mt-2">
                    <tr>
                        <th>Retail Price</th>
                        <td class="text-right">@Html.DisplayFor(model => model.PriceRetail)</td>
                    </tr>
                    <tr>
                        <th>Whole Sale Price</th>
                        <td class="text-right">@Html.DisplayFor(model => model.PriceBulk)</td>
                    </tr>
                    <tr>
                        <th>Marginal Price</th>
                        <td class="text-right">@Html.DisplayFor(model => model.PriceMargin)</td>
                    </tr>
                    <tr>
                        <th>Purchase Price</th>
                        <td class="text-right">@Html.DisplayFor(model => model.PricePurchase)</td>
                    </tr>
                </table>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                @if (!Model.IsRemoved)
                {
                    <a asp-page="./Edit"
                       asp-route-id="@Model.Id"
                       class="card-link text-white btn btn-link btn-secondary">Edit</a>

                    <a href="#"
                       class="card-link text-white btn btn-link btn-danger js-remove-item"
                       data-href="@Url.Action("Remove", "Products", new { id = Model.Id })"
                       data-returnUrl="@Url.Page("./Index")">
                        Remove
                    </a>
                }
            </div>
            <div class="col-md-6 text-right">
                <a asp-page="./Index"
                   class="card-link btn btn-primary">
                    Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <partial name="_UpdateSummary" for="Metadata" />
    </div>
</div>