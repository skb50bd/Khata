@page
@using WebUI.Pages.Components.Search
@model WebUI.Pages.PurchaseReturns.IndexModel

@{
    ViewData["Title"] = "PurchaseReturns";
}

<h1 class="display-4 text-dark">Purchase Returns</h1>
<p></p>

<div class="row">
    <div class="col-md-6">
        @await Component.InvokeAsync(
            nameof(Search),
            new { model = Model.Pf }
            )
    </div>
    <div class="col-md-6 text-right">
        <p>
            <a asp-page="Create" class="btn btn-primary">Create new</a>
        </p>
    </div>
</div>
@if (!(Model.Message is null))
{
    <div class="alert alert-@Model.MessageType" role="alert">
        @Model.Message
    </div>
}

<div>
    <partial name="_PurchaseReturnsList" for="PurchaseReturns" />

    @await Component.InvokeAsync(
        nameof(WebUI.Pages.Components.Pagination),
        new { model = Model.PurchaseReturns.EmitPagination })
</div>
