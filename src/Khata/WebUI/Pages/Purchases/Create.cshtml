@page
@model WebUI.Pages.Purchases.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Create a Purchase</h1>
<hr />

@if (!(Model.Message is null))
{
    <div class="alert alert-@Model.MessageType" role="alert">
        @Model.Message
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form method="post" class="immutable-submit">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            @await Component.InvokeAsync(
                nameof(Components.PurchaseForm.PurchaseForm),
                new { product = Model.PurchaseVm })

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/purchaseForm.js"></script>
}
