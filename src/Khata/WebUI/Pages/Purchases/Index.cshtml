@page
@using WebUI.Pages.Components.Search
@using WebUI.Pages.Purchases.Components.PurchasesList
@model WebUI.Pages.Purchases.IndexModel

@{
    ViewData["Title"] = "Purchases";
}

<div class="row">
    <div class="col-md-6">
        @await Component.InvokeAsync(
            nameof(Search),
            new { model = Model.Pf }
            )
    </div>
    <div class="col-md-6 text-right">
        <p>
            <a asp-page="Create"
               class="btn btn-primary">Create new</a>
        </p>
    </div>
</div>
@if (!(Model.Message is null))
{
    <div class="alert alert-@Model.MessageType"
         role="alert">
        @Model.Message
    </div>
}

<div>
    @await Component.InvokeAsync(
        nameof(PurchasesList),
        new { purchases = Model.Purchases })

    @await Component.InvokeAsync(
        nameof(WebUI.Pages.Components.Pagination),
        new { model = Model.Purchases.EmitPagination })
</div>
