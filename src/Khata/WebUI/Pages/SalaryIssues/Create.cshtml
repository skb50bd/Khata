@page
@using WebUI.Pages.SalaryIssues.Components.SalaryIssueForm
@model WebUI.Pages.SalaryIssues.CreateModel

@{
    ViewData["Title"] = "New Salary Issue";
}

<div class="row">
    <div class="col-md-4">
        <form method="post" class="immutable-submit">
            @await Component.InvokeAsync(
                nameof(SalaryIssueForm),
                new { salaryIssue = Model.SalaryIssueVm })

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


@section Scripts {
    <script src="~/js/salary.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
