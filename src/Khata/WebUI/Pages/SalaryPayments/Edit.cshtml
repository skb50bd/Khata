@* @page *@
@using WebUI.Pages.SalaryPayments.Components.SalaryPaymentForm
@model WebUI.Pages.SalaryPayments.EditModel

@{
    ViewData["Title"] = "Edit Salary Payment";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            @await Component.InvokeAsync(
                nameof(SalaryPaymentForm),
                new { salaryPayment = Model.SalaryPaymentVm })

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
