@model IEnumerable<DTOs.ServiceDto>
<table class="table table-sm table-borderless table-responsive-sm table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Outlet.Title)</th>
            <th class="text-right">@Html.DisplayNameFor(model => model.Price)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class="js-clickable-row"
            data-href="@Url.Page("./Details", new { id = item.Id })">
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Outlet.Title)</td>
            <td class="text-right">@Html.DisplayFor(modelItem => item.Price)</td>
        </tr>
        }
    </tbody>
</table>