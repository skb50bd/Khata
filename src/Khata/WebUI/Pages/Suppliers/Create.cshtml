@page
@using WebUI.Pages.Suppliers.Components.SupplierForm
@model WebUI.Pages.Suppliers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Create a Supplier</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @await Component.InvokeAsync(
                nameof(SupplierForm),
                new { supplier = Model.SupplierVm })

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}